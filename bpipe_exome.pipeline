//file containing Bpipe call for WES pipeline


// LOAD STAGES
load 'bpipe_dna_stages.groovy'

// LOAD CONFIG
load 'bpipe_exome_config.groovy'


Bpipe.run {
	getVersions + 
	"%_R*.fastq" * [ qc ] +
	"%_R*.fastq" * [ runEXOME_VARSCAN ] + somVARSC + 
	"*.somVARSC.%" * [ processVARSC ] + 
	"*.somVARSC.%.%" * [ fixFormat ] +
	"%.fixed" * [  tableANNOVAR ]  + merged + 
	"*R1%merged.csv" * [ filterOutput ] +
        "%_R*.fastq" * [ cleanUp ]
}

