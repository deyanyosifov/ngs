//file containing Bpipe call for MOUSE pipeline


// LOAD STAGES
load 'bpipe_dna_stages.groovy'

// LOAD CONFIG
load 'bpipe_exome_mouse_config.groovy'

Bpipe.run {
	getVersions + 
	"%_R*.fastq" * [ qc ] +
	"%_R*.fastq" * [ runEXOME_VARSCAN_mouse ] + somVARSC + 
	"*.somVARSC.%" * [ processVARSC ] +
	"*.somVARSC.%.%" * [ dummy + doublePos ] + 
	"%.fixed" * [ tableANNOVARmm10 ] + merged + 
	"*R1%merged.csv" * [ final_sed + filterOutput ] 
}

