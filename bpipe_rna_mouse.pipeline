//file containing Bpipe call for MOUSE RNA expression pipeline


// LOAD STAGES
load 'bpipe_dna_stages.groovy'
load 'bpipe_rna_stages.groovy'

// LOAD CONFIG
load 'bpipe_rna_mouse_config.groovy'


Bpipe.run {
	getVersions + 
	"%_R*.fastq" * [ qc ] +
	"%_R*.fastq" * [ alignSTAR + dedupOptPIC + unmarkDupsPIC ] +
        "%.unmarkDupsPIC.bam" * [ idxstatPIC, countHTSeq_unstranded, countHTSeq_sameStranded, countHTSeq_otherStranded ] +
        cleanUp
}

